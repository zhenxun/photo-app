<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_image_path, :class => 'btn btn-info btn-add-image' %>
</div>
<section class="section-images">
  
  <div class="section-images__container">
    <% @images.each do |image| %>
    
        <div class="section-images__item">
            <%= image_tag image.picture.url, class: "section-images__item-image", title: image.name%>
        </div>
    
    <% end %>
    
  </div>
  
</section>
    

